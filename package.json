{
  "name": "charon",
  "private": true,
  "version": "0.6.0",
  "type": "module",
  "description": "Privacy-enabling account management and SSO solution.",
  "license": "Apache-2.0",
  "author": {
    "name": "Charon contributors",
    "url": "https://gitlab.com/charon/charon"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/charon/charon.git"
  },
  "scripts": {
    "serve": "vite serve",
    "build": "vite build",
    "lint": "eslint --fix src tests",
    "lint-ci": "eslint --fix --format gitlab src tests",
    "lint-style": "stylelint --fix src/**/*.{css,scss,vue,html}",
    "lint-style-ci": "stylelint --fix --custom-formatter=@studiometa/stylelint-formatter-gitlab src/**/*.{css,scss,vue,html}",
    "lint-vue": "vue-tsc --noEmit",
    "fmt": "prettier src tests *.ts *.js *.json .*.json --write",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "test-ci": "vitest run --reporter junit --reporter default --outputFile tests.xml --coverage",
    "test-e2e": "playwright test --config=playwright.config.ts --update-snapshots=${UPDATE_SCREENSHOTS:-missing} && nyc report",
    "test-e2e-install": "playwright install --with-deps chromium",
    "generate-vue-i18n": "node generate-vue-i18n.js",
    "upgrade": "ncu -u"
  },
  "dependencies": {
    "@all1ndev/vue-local-scope": "^0.3.2",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@tozd/identifier": "^0.7.0",
    "argon2id": "^1.0.1",
    "lodash-es": "^4.17.23",
    "openid-client": "^6.8.1",
    "structured-field-values": "^2.0.4",
    "vue": "^3.5.26",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/types": "^7.28.5",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@headlessui/tailwindcss": "^0.2.2",
    "@intlify/devtools-types": "^11.2.8",
    "@intlify/unplugin-vue-i18n": "^11.0.3",
    "@playwright/test": "^1.56.1",
    "@studiometa/stylelint-formatter-gitlab": "^1.0.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.1",
    "@typescript/lib-dom": "npm:@types/web@^0.0.312",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/eslint-config-typescript": "^14.6.0",
    "autoprefixer": "^10.4.23",
    "axe-html-reporter": "^2.2.11",
    "canonicalize": "^2.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-gitlab": "^7.0.1",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^17.0.0",
    "npm-check-updates": "^19.3.1",
    "nyc": "^17.1.0",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rollup-plugin-license": "^3.6.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.0",
